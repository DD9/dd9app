extends ../index/layout

block content
  .container
    .row
      .col.company-title
        h2.d-inline #{company.name}
        button#edit_company_modal_btn.edit-company-btn.btn.btn-primary(type='button', data-toggle='modal', data-target='#editCompanyModal') Edit
    .row
      .col.mt-2
        h4 Hour Logs
    table#company_one.table-sm.table-bordered.w-100
      thead
        td Date
        td Title
        td Hours
        td Hidden Hours
      each hourLog in hourLogs
        tr
          td= "2018-06-03"
          td: a(href=`/hourLog/${hourLog._id}`) #{hourLog.title}
          td 46
          td 46

  #editCompanyModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='editCompanyModal', aria-hidden='true')
    .modal-dialog(role='document')
      .modal-content
        .modal-header
          h5.modal-title Edit -Company
          button.close(type='button', data-dismiss='modal', aria-label='Close')
            span(aria-hidden='true') Ã—
        .modal-body
          form#editCompanyForm.form(action="/companies/update" method="POST" novalidate)
            .form-group
              label.col-form-label(for='companyName') Name
              input#companyName.form-control(name='name' type='text' required maxlength="50")
              .invalid-feedback Invalid form.
        .modal-footer
          button.btn.btn-secondary(type='button', data-dismiss='modal') Close
          button.btn.btn-primary(type='submit' form='editCompanyForm') Submit