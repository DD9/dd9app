extends ../index/layout

block content
  .container
    .row
      .col
        h2.user-table-title Users
    table#userAllTable.table-xl.table-striped.table-bordered.w-100
      thead
        td Name
        td Email
        td Company
        td Last Login
        td Subscription
        td
      each user in users
        tr
          td= `${user.firstName} ${user.lastName}`
          td= user.email
          td: a(href=`/company/${user.company._id}`) #{user.company.name}
          td= user.lastSignInAt
          td= user.hourLogEmail
          td
