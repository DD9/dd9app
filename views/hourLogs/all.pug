extends ../index/layout

block content
  .container
    .row
      .col
        h2.hour-log-table-title Hour Logs
    table#hour_log_all.table-sm.table-bordered.table-striped.table-hover.w-100
      thead
        th.hour_log_all_th_date_opened Date Opened
        th.hour_log_all_th_date_closed Date Closed
        th.hour_log_all_th_company Company
        th.hour_log_all_th_title Title
        th.hour_log_all_th_total_public_hours Hours
        th.hour_log_all_th_total_hidden_hours Hidden
      tbody
        each hourLog in hourLogs
          tr
            td= h.YYYYMMDD(hourLog.dateOpened)
            td= hourLog.dateClosed ? h.YYYYMMDD(hourLog.dateClosed) : ''
            td: a(href=`/companies/${hourLog.company._id}`) #{hourLog.company.name}
            td: a(href=`/hourLogs/${hourLog._id}`) #{hourLog.title}
            td= hourLog.totalPublicHours
            td= hourLog.totalHiddenHours
